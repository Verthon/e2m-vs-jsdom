{
  "$schema": "./node_modules/oxlint/configuration_schema.json",
  "plugins": [
    "import",
    "react",
    "react-perf",
    "typescript",
    "oxc",
    "vitest",
    "jsx-a11y"
  ],
  "categories": {
    "correctness": "error",
    "suspicious": "warn",
    "pedantic": "off"
  },
  "rules": {
    "import/no-cycle": "error",
    "react-in-jsx-scope": "off",
    "no-unassigned-import": "off"
  }
}
